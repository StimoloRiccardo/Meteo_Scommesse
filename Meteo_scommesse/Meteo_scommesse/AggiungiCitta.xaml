<Window x:Class="Meteo_scommesse.AggiungiCitta"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Meteo_scommesse"
        mc:Ignorable="d"
        Title="AggiungiCitta" Height="278" Width="435">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF00D6FF"/>
                <GradientStop Color="White" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Label x:Name="label_nomeCitta" Content="Inserisci nome città:" HorizontalAlignment="Center" Height="29" Margin="0,59,0,0" VerticalAlignment="Top" Width="187" BorderThickness="0,0,0,2" BorderBrush="Black" FontSize="16"/>
        <TextBox x:Name="txtBox_nomeCitta" HorizontalAlignment="Center" Height="31" Margin="0,88,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="187"/>
        <Button x:Name="button_aggiungi" Content="AGGIUNGI" HorizontalAlignment="Center" Height="41" Margin="0,142,0,0" VerticalAlignment="Top" Width="187" Background="{x:Null}" BorderBrush="{x:Null}" RenderTransformOrigin="0.483,0.39" FontWeight="Bold" FontSize="16" Click="Button_Click"/>

    </Grid>
</Window>
