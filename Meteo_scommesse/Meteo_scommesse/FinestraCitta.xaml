<Window x:Class="Meteo_scommesse.FinestraCitta"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Meteo_scommesse"
        mc:Ignorable="d"
        Title="FinestraCitta" Height="767" Width="320">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="179*"/>
            <ColumnDefinition Width="141*"/>
        </Grid.ColumnDefinitions>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF00D6FF"/>
                <GradientStop Color="White" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Label x:Name="label_nomeCitta" HorizontalAlignment="Left" Height="39" Margin="45,31,0,0" VerticalAlignment="Top" Width="219" FontSize="16" FontWeight="Bold" Content="prova" Grid.ColumnSpan="2"/>
        <Label x:Name="label_temperatura" Content="3" HorizontalAlignment="Left" Height="65" Margin="114,203,0,0" VerticalAlignment="Top" Width="92" FontWeight="Bold" FontSize="16" Grid.ColumnSpan="2"/>
        <Image x:Name="immagine_meteo" HorizontalAlignment="Left" Height="94" Margin="90,88,0,0" VerticalAlignment="Top" Width="128" Grid.ColumnSpan="2"/>
        <Label x:Name="label_umidita" Content="umidità:" HorizontalAlignment="Left" Height="33" Margin="19,310,0,0" VerticalAlignment="Top" Width="114" FontSize="14" FontWeight="Bold"/>
        <Label x:Name="label_vento" Content="vento:" HorizontalAlignment="Left" Height="33" Margin="19,343,0,0" VerticalAlignment="Top" Width="114" FontSize="14" FontWeight="Bold"/>
        <Label x:Name="label_umidita_Copia" Content="Parametri:" HorizontalAlignment="Left" Height="31" Margin="19,273,0,0" VerticalAlignment="Top" Width="98" FontWeight="Bold" FontSize="16"/>
        <Label x:Name="label_tempMax" Content="temp max: " HorizontalAlignment="Left" Height="33" Margin="19,376,0,0" VerticalAlignment="Top" Width="114" FontSize="14" FontWeight="Bold"/>
        <Label x:Name="label_tempMin" Content="temp min:" HorizontalAlignment="Left" Height="33" Margin="19,409,0,0" VerticalAlignment="Top" Width="114" FontSize="14" FontWeight="Bold"/>
        <Label x:Name="label_precipitazioni" Content="precipitazioni: " HorizontalAlignment="Left" Height="33" Margin="19,442,0,0" VerticalAlignment="Top" Width="155" FontSize="14" FontWeight="Bold"/>
        <Label x:Name="label_latitudine" Content="latitudine:" HorizontalAlignment="Left" Height="33" Margin="0,310,0,0" VerticalAlignment="Top" Width="114" FontSize="14" FontWeight="Bold" Grid.Column="1"/>
        <Label x:Name="label_longitudine" Content="lonitudine:" HorizontalAlignment="Left" Height="33" Margin="0,343,0,0" VerticalAlignment="Top" Width="131" FontSize="14" FontWeight="Bold" Grid.Column="1"/>

    </Grid>
</Window>
