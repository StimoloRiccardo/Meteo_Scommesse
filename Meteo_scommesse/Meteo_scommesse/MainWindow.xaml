<Window x:Class="Meteo_scommesse.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Meteo_scommesse"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="320">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF00D6FF"/>
                <GradientStop Color="White" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <ListBox x:Name="listBox_citta" HorizontalAlignment="Center" Height="333" Margin="0,91,0,0" VerticalAlignment="Top" Width="320" d:ItemsSource="{d:SampleData ItemCount=5}" Background="{x:Null}" BorderBrush="{x:Null}" FontSize="18" SelectionChanged="listBox_citta_SelectionChanged"/>
        <Label x:Name="label_meteo" Content="METEO" HorizontalAlignment="Left" Height="60" VerticalAlignment="Top" Width="216" FontSize="45" Foreground="#FF2853FF"/>
        <Button x:Name="button_aggiungi" Content="+" HorizontalAlignment="Left" Height="60" Margin="242,0,0,0" VerticalAlignment="Top" Width="68" FontSize="25" Background="{x:Null}" BorderBrush="{x:Null}" Click="Button_Click" Foreground="#FF2853FF"/>
    </Grid>
</Window>
