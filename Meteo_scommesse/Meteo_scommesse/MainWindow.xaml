<Window x:Class="Meteo_scommesse.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Meteo_scommesse"
        mc:Ignorable="d"
        Title="MainWindow" Height="590" Width="368">
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FF00D6FF"/>
                <GradientStop Color="White" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <ListBox x:Name="listBox_citta" HorizontalAlignment="Center" MouseDoubleClick="listBox_citta_MouseDoubleClick" Height="316" Margin="0,91,0,0" VerticalAlignment="Top" Width="368" d:ItemsSource="{d:SampleData ItemCount=5}" Background="{x:Null}" BorderBrush="{x:Null}" FontSize="18" SelectionChanged="listBox_citta_SelectionChanged"/>
        <Label x:Name="label_meteo" Content="METEO" HorizontalAlignment="Left" Height="60" VerticalAlignment="Top" Width="216" FontSize="45" Foreground="#FF2853FF" Margin="6,6,0,0"/>
        <Button x:Name="button_aggiungi" Content="+" HorizontalAlignment="Left" Height="60" Margin="290,10,0,0" VerticalAlignment="Top" Width="68" FontSize="25" Background="{x:Null}" BorderBrush="{x:Null}" Click="Button_Click" Foreground="#FF2853FF"/>
        <Button Content="Aggiorna" HorizontalAlignment="Left" Height="36" Margin="57,502,0,0" VerticalAlignment="Top" Width="102" Click="Button_Click_1" Background="#FF059CC6" Foreground="White" FontSize="15" FontFamily="Yu Gothic UI" BorderBrush="White" BorderThickness="0,0,0,0" FontWeight="Bold"/>
        <Button Content="Scommetti" HorizontalAlignment="Left" Height="36" Margin="199,502,0,0" VerticalAlignment="Top" Width="108" Click="Button_Click_2" Background="White" FontSize="15" FontWeight="Bold"/>
    </Grid>
</Window>
